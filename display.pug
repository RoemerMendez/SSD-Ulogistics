extends layout 
block content
    head 
        include head
        //script(type = 'text/javascript' src = '/javascripts/validate.js')
    body(style = 'height: 100%')
        nav(class = 'navbar navbar-expand-lg navbar-light bg-white')
            div(class = 'container')
                a(class = 'navbar-brand' )
                    img(src="public/images/logo.png", id="logo", class='navbar-brand-img')
                div(class = 'collapse navbar-collapse')                    
                    a(class = 'navbar-btn btn btn-sm btn-secondary lift ml-auto', href="./index.pug") Atrás 
        div(class = 'col')
            div(class = 'container space-2 space-0--lg mt-lg-8')     
                div(class = 'row align-items-center h-100')
                    h1(class = 'lead text-center text-md-left text-muted mb-6 mb-lg-8') Visualización del pedido
                div(class = 'input-group input-group-lg mb-3 mb-lg-0')
                        div(class = 'form-group')
                            select(type = 'text' id = 'list' name = 'Lista de pedidos' placeholder = 'list' value = list class = 'form-control' required)
                                    option(value = '' select hidden) Almacen de recojo
                                    option(id = 'list1' name = 'list1' value = 'list1') list1
                                    option(id = 'list2' name = 'list2' value = 'list2') list2
                                    option(id = 'list3' name = 'list3' value = 'list3') list3
                                    option(id = 'list4' name = 'list4' value = 'list4') list4
                div(class = 'container')
                    h2 Plan de asignación
                    div(class = 'table-responsive')
                        table(class = 'table table-striped table-sm')
                            thead
                                tr  
                                    th ID Pedido
                                    th Proveedor de transporte
                                    th Tipo de transporte
                                    th Capacidad
                                    th Toneladas
                                    th Costo
                                    th Precio total
                            tbody
                                tr  
                                    td(class = 'text-center align-middle') #{pedido.id}
                                    td(class = 'text-center align-middle') #{name.proveedor}
                                    td(class = 'text-center align-middle') #{tipo.transporte}
                                    td(class = 'text-center align-middle') #{capacidad}
                                    td(class = 'text-center align-middle') #{TN}                                     
                                    td(class = 'text-center align-middle') #{Costo}
                                    td(class = 'text-center align-middle') #{Precio}
                    h2 Dashboard
                    canvas(class="my-4 w-100 chartjs-render-monitor" id="myChart" width="842" height="355" style="display: block; width: 842px; height: 355px;")



